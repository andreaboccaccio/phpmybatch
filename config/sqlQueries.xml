<!DOCTYPE sqlQueries>
<sqlQueries>
	<sqlQuery id="itemsKindCodeName" displayName="Articoli Caricati per Categoria, Codice e Nome">
		<strSQL>
			SELECT kind AS Categoria
				,code AS Codice
				,name AS Nome
				,SUM(qty) AS QTA_Caricata
				FROM ITEM_DENORM
				GROUP BY kind
					,code
					,name
				ORDER BY kind
					,code
					,name
		</strSQL>
